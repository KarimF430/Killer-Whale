# Scheduled API Fetcher Configuration
# Copy this to your .env file and update with your actual API credentials

# External API Configuration
EXTERNAL_API_TOKEN=your_api_token_here
EXTERNAL_API_BASE_URL=https://api.example.com

# Car Data API (replace with your actual endpoints)
CAR_API_ENDPOINT=https://api.example.com/cars
BRAND_API_ENDPOINT=https://api.example.com/brands
NEWS_API_ENDPOINT=https://api.example.com/news

# API Rate Limiting
MAX_API_CALLS_PER_DAY=100
TOKENS_PER_CALL=1

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Kolkata
SCHEDULER_ENABLED=true

# Fetch Times (24-hour format)
AFTERNOON_FETCH_TIME=13:00  # 1:00 PM
EVENING_FETCH_TIME=20:00    # 8:00 PM

# Cache Configuration
CACHE_DURATION_HOURS=12
ENABLE_CACHE_PERSISTENCE=true

# Logging
SCHEDULER_LOG_LEVEL=info
ENABLE_SCHEDULER_LOGS=true
